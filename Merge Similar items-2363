import java.util.HashMap;
class Solution {
    public List<List<Integer>> mergeSimilarItems(int[][] items1, int[][] items2) {
        HashMap<Integer,Integer> buc=new HashMap<>();
        int i=0;

        //add items1 to the map
        for(int[] item:items1)
        {
            int value=item[0];
            int weight=item[1];
            buc.put(value,buc.getOrDefault(value,0)+weight);
        }

        for(int[] item:items2)
        {
            int value=item[0];
            int weight=item[1];
            buc.put(value,buc.getOrDefault(value,0)+weight);
        
        }

        //CONVERT MAP TO list
        List<List<Integer>> result = new ArrayList<>();
           for (Map.Entry<Integer, Integer> entry : buc.entrySet()) {
                result.add(Arrays.asList(entry.getKey(), entry.getValue()));
            }

        result.sort(Comparator.comparingInt(a -> a.get(0)));

        return result;

    } 
    
}
