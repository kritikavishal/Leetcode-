import java.util.Stack;

class StockSpanner {
    class Pair {
        int price;
        int span;

        Pair(int price, int span) {
            this.price = price;
            this.span = span;
        }
    }

    private Stack<Pair> st;

    public StockSpanner() {
        st = new Stack<>();
    }
    
    public int next(int price) {
        int span = 1;

        // Merge with previous spans while top price <= current price
        while (!st.isEmpty() && st.peek().price <= price) {
            span += st.peek().span;
            st.pop();
        }

        st.push(new Pair(price, span));
        return span;
    }
}
